<!-- Modal de Schedule (ser√° carregado dinamicamente) -->
<div id="schedule-modal-container"></div>

<!-- QR Code Library -->
<script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"></script>

<script>
  // Inicializar Video.js Player
  document.addEventListener('DOMContentLoaded', function() {
    // Player de v√≠deo
    if (document.getElementById('broadcast-player')) {
      const player = videojs('broadcast-player', {
        fluid: true,
        controls: true,
        autoplay: false,
        preload: 'auto',
        playbackRates: [0.5, 1, 1.5, 2]
      });
      
      window.player = player;
    }
    
    // Gerar QR Code
    if (document.getElementById('qrcode')) {
      const streamUrl = '<%= @broadcast.stream_url %>';
      QRCode.toCanvas(document.getElementById('qrcode'), streamUrl, {
        width: 100,
        height: 100,
        margin: 1,
        color: {
          dark: '#000000',
          light: '#FFFFFF'
        }
      }, function(error) {
        if (error) {
          console.error('Erro ao gerar QR Code:', error);
          document.getElementById('qrcode').innerHTML = 
            '<div style="display: flex; align-items: center; justify-content: center; height: 100%; color: #64748b;">QR Code</div>';
        }
      });
    }
    
    // Atualizar m√©tricas em tempo real (simula√ß√£o)
    if ('<%= @broadcast.status %>' === 'running') {
      startMetricsSimulation();
    }
  });
  
  // Fun√ß√µes de controle do player
  function restartVideo() {
    if (window.player) {
      window.player.currentTime(0);
      window.player.play();
    }
  }
  
  function toggleMute() {
    if (window.player) {
      window.player.muted(!window.player.muted());
    }
  }
  
  function toggleFullscreen() {
    if (window.player) {
      if (window.player.isFullscreen()) {
        window.player.exitFullscreen();
      } else {
        window.player.requestFullscreen();
      }
    }
  }
  
  // Fun√ß√µes de agendamento
  function openScheduleModal() {
    fetch('<%= schedule_modal_broadcast_path(@broadcast) %>')
      .then(response => response.text())
      .then(html => {
        document.getElementById('schedule-modal-container').innerHTML = html;
        document.getElementById('schedule-modal-container').querySelector('.modal-overlay').style.display = 'flex';
      });
  }
  
  function previewScheduleVideo(scheduleId) {
    // Implementar preview do v√≠deo do agendamento
    alert('Visualizando v√≠deo do agendamento ' + scheduleId);
  }
  
  function removeSchedule(scheduleId) {
    if (confirm('Tem certeza que deseja remover este agendamento?')) {
      fetch('/schedules/destroy_schedule', {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
        },
        body: JSON.stringify({ id: scheduleId })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          location.reload();
        }
      });
    }
  }
  
  // Fun√ß√µes utilit√°rias
  function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(() => {
      showNotification('Copiado para a √°rea de transfer√™ncia!');
    });
  }
  
  function showNotification(message, type = 'success') {
    // Implementa√ß√£o b√°sica de notifica√ß√£o
    const notification = document.createElement('div');
    notification.innerHTML = `
      <div style="position: fixed; top: 100px; right: 24px; z-index: 9999;
           background: ${type === 'success' ? 'rgba(76, 201, 240, 0.9)' : 'rgba(247, 37, 133, 0.9)'}; 
           color: white; padding: 12px 20px; border-radius: var(--border-radius-sm);
           box-shadow: var(--shadow-lg); backdrop-filter: blur(10px); 
           animation: slideInRight 0.3s ease;">
        <div style="display: flex; align-items: center; gap: 12px;">
          <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
          <span>${message}</span>
        </div>
      </div>
    `;
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
      notification.style.animation = 'slideOutRight 0.3s ease';
      setTimeout(() => notification.remove(), 300);
    }, 3000);
  }
  
  // Simula√ß√£o de m√©tricas em tempo real
  function startMetricsSimulation() {
    setInterval(() => {
      if (document.querySelectorAll('.metric').length) {
        // Atualizar n√∫mero de conectados (aleat√≥rio entre 0-50)
        const connectedElement = document.querySelector('.metric:nth-child(1) div:last-child');
        if (connectedElement) {
          const current = parseInt(connectedElement.textContent) || 0;
          const change = Math.random() > 0.5 ? 1 : -1;
          const newValue = Math.max(0, current + change);
          connectedElement.textContent = newValue;
        }
        
        // Atualizar bitrate (aleat√≥rio entre 0-10 Mbps)
        const bitrateElement = document.querySelector('.metric:nth-child(2) div:last-child');
        if (bitrateElement) {
          const bitrate = (Math.random() * 10).toFixed(1);
          bitrateElement.textContent = bitrate + ' Mbps';
        }
        
        // Atualizar buffer (aleat√≥rio entre 0-100 ms)
        const bufferElement = document.querySelector('.metric:nth-child(3) div:last-child');
        if (bufferElement) {
          const buffer = Math.floor(Math.random() * 100);
          bufferElement.textContent = buffer + ' ms';
        }
      }
    }, 2000);
  }
</script>

