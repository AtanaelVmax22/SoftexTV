<body>
  <% unless controller_name == "license" && ["new", "create"].include?(action_name) %>
    <!-- Top Bar -->
    <header class="top-bar">
      <div class="top-bar-left">
        <div class="logo">
          <i class="fas fa-satellite-dish logo-icon"></i>
          <span class="logo-text">SoftexTV</span>
        </div>
        
        <% if controller_name == "broadcasts" && action_name == "edit" %>
          <nav class="breadcrumb">
            <%= link_to 'Broadcasts', broadcasts_path, style: "color: #94a3b8; text-decoration: none;" %>
            <span class="breadcrumb-separator">‚Ä∫</span>
            <span class="breadcrumb-current">Edit <%= @broadcast.name %></span>
          </nav>
        <% end %>
      </div>
      
      <div class="top-bar-right">
        <!-- Bot√µes de Admin -->
        <% if current_user&.admin? %>
          <div class="admin-actions">
            <!-- Bot√£o Export M3U -->
            <%= link_to export_m3u_broadcasts_path,
                  class: 'admin-btn',
                  style: 'display: flex; align-items: center; gap: 8px; padding: 8px 16px; 
                         background: rgba(76, 201, 240, 0.1); border: 1px solid rgba(76, 201, 240, 0.2);
                         border-radius: var(--border-radius-sm); color: var(--success); 
                         text-decoration: none; font-size: 14px; transition: all var(--transition);',
                  data: { turbo: false } do %>
              <i class="fas fa-file-export"></i>
              <span>Export M3U</span>
            <% end %>
            
            <!-- Bot√£o Configuration -->
            <%= link_to edit_streaming_configuration_path(1),
                  class: 'admin-btn',
                  style: 'display: flex; align-items: center; gap: 8px; padding: 8px 16px; 
                         background: rgba(248, 150, 30, 0.1); border: 1px solid rgba(248, 150, 30, 0.2);
                         border-radius: var(--border-radius-sm); color: var(--warning); 
                         text-decoration: none; font-size: 14px; transition: all var(--transition);' do %>
              <i class="fas fa-cog"></i>
              <span>Configuration</span>
            <% end %>
          </div>
          
          <div class="separator"></div>
        <% end %>
        
        <!-- Language Switcher -->
        <div class="language-switcher">
          <%= form_with(url: url_for(locale: I18n.locale), method: :get, local: true) do %>
            <%= select_tag :locale, 
