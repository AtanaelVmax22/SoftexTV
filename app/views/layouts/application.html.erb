<%= javascript_importmap_tags %>
<%= javascript_import_module_tag "broadcasts" %>

<!DOCTYPE html>
<html>
  <head>
    <title>SoftexTv</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <meta name="csrf-token" content="<%= csrf_meta_tags %>">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  </head>

  <body>
   <% unless controller_name == "license" && (action_name == "new" || action_name == "create") %>  
    <div class="container">
      <% unless controller_name == "sessions" && action_name == "new" %>
      
      <div class="perfil">
          <% if user_signed_in? %>
            <div class="d-flex align-items-center my-3">
              <i class="fas fa-user-circle fa-2x me-2"></i>
              <p class="m-0">Welcome, <strong><%= current_user.email %></strong>!</p>
              <div class="btn-conteiner-perfil">
                <% if current_user.admin? %>
                  <%= link_to 'Manage Users', users_path, class: 'btn-manage_account' %>
                <% end %>
                <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn-danger' %>
              </div>
            </div>
          <% else %>
            <%= link_to 'Login', new_user_session_path, class: 'btn btn-primary' %>
          <% end %>
        </div>
       

        <div class="language mt-4">
          <h4 class="text_language"><%= I18n.t('language') %></h4>
          <%= form_with(url: url_for(locale: I18n.locale), method: :get, local: true) do %>
            <%= select_tag :locale, options_for_select([['English', 'en'], ['Português', 'pt']], I18n.locale), onchange: 'this.form.submit();' %>
          <% end %>
        </div>
      <% end %>
 <% end %>
      <%= yield %>
    </div>
<% unless controller_name == "license" && (action_name == "new" || action_name == "create") %>  
    <!-- Botão de voltar (condicional) -->
    <% unless (controller_name == "broadcasts" && action_name == "index") ||
              (controller_name == "users" && (action_name == "new" || action_name == "edit")) ||
              (controller_name == "sessions" && action_name == "new") %>
      <div class="btn-nevegation">
        <%= link_to broadcasts_path, class: 'back-link' do %>
          <i class="fas fa-arrow-left"></i> <%= I18n.t('Back') %>
        <% end %>
      </div>
    <% end %>
<% end %>
    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

<style>
/* Seus estilos customizados aqui */
</style>
